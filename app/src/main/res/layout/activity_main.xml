        <TextView
                app:layout_constraintStart_toStartOf="@id/year_picker"
                app:layout_constraintEnd_toEndOf="@id/month_picker"
                app:layout_constraintTop_toBottomOf="@id/product_999"
                android:id="@+id/year_text"
                android:layout_marginTop="30dp"
                android:text="Amount Transferred"
                android:fontFamily='@font/pt_mono'
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"/>
        <NumberPicker
            app:layout_constraintStart_toStartOf="@id/product_999"
            app:layout_constraintEnd_toStartOf="@id/month_picker"
            android:id="@+id/year_picker"
            android:layout_width="0dp"
            android:selectionDividerHeight="0.5dp"
            android:theme="@style/ThemeOverlay.NumberPicker"
            android:fontFamily='@font/pt_mono'
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/year_text"
            android:layout_marginRight="10dp"
                />
        <NumberPicker
            app:layout_constraintStart_toEndOf="@id/year_picker"
            app:layout_constraintEnd_toEndOf="@id/product_999"
            android:id="@+id/month_picker"
            android:theme="@style/ThemeOverlay.NumberPicker"
            android:fontFamily='@font/pt_mono'
            android:selectionDividerHeight="0.5dp"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/year_text"
            />


            <ImageView
                android:id="@+id/tooltip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintEnd_toEndOf="@id/month_picker"
                app:layout_constraintStart_toStartOf="@id/amount"
                app:layout_constraintTop_toBottomOf="@id/amount_monthly"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="60sp"
                app:layout_constraintWidth_percent="0.1"
                app:srcCompat="@drawable/tooltip" />



            <TextView
                android:id="@+id/amount_monthly"
                app:layout_constraintStart_toStartOf="@id/year_picker"
                app:layout_constraintTop_toBottomOf="@id/year_picker"
                android:layout_marginTop="30dp"
                android:text="year-month: $___"
                android:fontFamily='@font/pt_mono'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/amount"
                app:layout_constraintStart_toStartOf="@id/year_picker"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/amount_monthly"
                android:layout_marginTop="30dp"
                android:text="Total: $___"
                android:fontFamily='@font/pt_mono'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/main_email"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="150dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="150dp"
                android:layout_marginBottom="5sp"
                android:text="temp@gmail.com"
                android:textAlignment="center"
                android:fontFamily='@font/pt_mono'
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_logout" />

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adView"
        android:id="@+id/button_logout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"

        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="Logout"
                android:textStyle="bold"
                android:textColor="#7fe35c"
                android:fontFamily="@font/pt_mono"
                android:textSize="29sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        app:layout_constraintBottom_toBottomOf="parent"
        ads:adUnitId="ca-app-pub-3219002957521374/3340836174"
        >
    </com.google.android.gms.ads.AdView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="669dp" />

</androidx.constraintlayout.widget.ConstraintLayout>




